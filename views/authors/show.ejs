<h2><%= author.name %></h2>

<div class="btn-row">
    <a class="btn btn-primary" href="/authors/<%= author.id %>/edit">Edit</a>
    <%- include('../partials/deleteForm',{url:`/authors/${author.id}`})%>

</div>

<!-- <% console.log(bookByAuthor)%> -->
<% if(bookByAuthor.length>0){ %>
    <h2>Books By Author</h2>
    <% bookByAuthor.forEach(book => { %>
        <a href="/books/<%= book.id  %>">
            <img src="<%= book.coverImagePath %>" width="100" height="150">

        </a>
    <%}); %>
<% } %>